FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

#include "../system/includeDict";

internalField   uniform $Ui;

boundaryField
{
    farfield
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }
    BaseAndTop
    {
        type            empty;
    }
    airfoil
    {
        type            fixedValue;
        value           uniform (0 0 0);
	}
}


